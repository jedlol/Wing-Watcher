<h1>Settings</h1>

<%= bootstrap_form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>

	<%= f.text_field :username, label: "Change my user name" %>
	<%= f.email_field :email, label: "Change my email"  %>
	<%= f.file_field :image, label: "Change my profile picture"  %>
	<%= f.text_area :description, label: "Change my bio" %>
	<%= f.submit "Save"%>

<% end %>

<%= link_to "Delete My Account", user_path(@user) %><br>
<%= link_to "Sign Out", users_path %>